#include "stdafx.h"
#include <iostream>
#include <conio.h>
#include "math.h"
 using namespace std;

 void main ()
 {
	 float i;
	 int n, s=0;;
	 do{
		 cout<< "Ingrese el valor de n: ";
		 cin>> n;
	 }while(n<=0);
	 i=1;
	 while(i<=n)
	 {
		 s=s+pow(i,2);
		 i=i++;
	 }
	 cout<< "El resultado de la suma es: " << s << endl;
	 getch();
 }
	 
