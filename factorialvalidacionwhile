#include "stdafx.h"
#include <iostream>
#include <conio.h>
 using namespace std;

 void main ()
 {
int factorial=1,i,n;
//factorial es un acumulador de producto
//factorial=1 inicializar el acumulador
//i es un contador 
//n es el numero que necesita calcular el factorial
//validar la entrada
	 do{
		cout<< "Ingrese el valor de n: ";
		cin>> n ;
	 } while (n<0); //la condicion debe contemplar los valores incorrectos (falso)
					// negar la condicion correcta
	 i=1;
	 while(i<=n)
	 {
		 factorial=factorial*i;
		 i=i++;			
	 }
	 cout<< "El factorial de " << n << " es: " << factorial<< endl;
	 getch();
 }
